{
  "name": "book-store",
  "version": "0.0.0",
  "scripts": {
    "build": "ng build",
    "precommit": "npm-run-all -s \"lint:fix\"",
    "lint": "npm-run-all -s \"lint:ts\" \"lint:scss\"",
    "lint:fix": "npm-run-all -s \"lint:ts:fix\" \"lint:scss:fix\" \"prettier:fix\" \"prettier-package:fix\"",
    "lint:scss": "stylelint \"**/*.scss\"",
    "lint:scss:fix": "npm run lint:scss -- --fix",
    "lint:ts": "ng lint",
    "lint:ts:fix": "npm run lint:ts -- --fix",
    "mock": "node -e \"require('./mocks/server.js').start(3000,3001)\"",
    "ng": "ng",
    "prepare": "simple-git-hooks",
    "serve": "ng serve",
    "start": "npm run start:mock",
    "start:mock": "npm-run-all -p -r \"mock\" \"ng serve --configuration=mock\"",
    "test": "ng test",
    "test:ci": "ng test --run-in-band",
    "test:watch": "ng test --watch",
    "prettier": "prettier --check \"**/*.{js,package.json,css,scss,less,md,ts,html,component.html}\"",
    "prettier-package:fix": "prettier-package-json --write ./package.json",
    "prettier:fix": "prettier --write \"**/*.{js,css,scss,less,md,ts,html,component.html}\"",
    "watch": "ng build --watch --configuration development",
    "openapi": "rm -rf generated/ && openapi-generator-cli generate",
    "postinstall": "npm run openapi",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.1.7",
    "@angular/cdk": "^19.1.5",
    "@angular/common": "^19.1.7",
    "@angular/compiler": "^19.1.7",
    "@angular/core": "^19.1.7",
    "@angular/forms": "^19.1.7",
    "@angular/material": "^19.1.5",
    "@angular/platform-browser": "^19.1.7",
    "@angular/platform-browser-dynamic": "^19.1.7",
    "@angular/router": "^19.1.7",
    "@ngrx/signals": "^19.2.1",
    "@ngx-translate/core": "^16.0.4",
    "@ngx-translate/http-loader": "^16.0.1",
    "ng-mocks": "^14.13.2",
    "ngx-cookie-service": "^19.1.0",
    "ngx-skeleton-loader": "^10.0.0",
    "rxjs": "^7.8.1",
    "zone.js": "^0.15.0"
  },
  "overrides": {
    "body-parser": "^1.20.3"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "19.0.0",
    "@angular-builders/jest": "^19.0.0",
    "@angular-devkit/build-angular": "^19.2.17",
    "@angular/cli": "19.1.7",
    "@angular/compiler": "19.1.7",
    "@angular/compiler-cli": "19.1.7",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.20.0",
    "@ng-apimock/core": "^3.12.0",
    "@ng-apimock/dev-interface": "^3.5.1",
    "@ngneat/spectator": "^19.4.1",
    "@openapitools/openapi-generator-cli": "^2.16.3",
    "@playwright/test": "1.55.1",
    "@schuchard/prettier": "^5.1.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.4",
    "angular-eslint": "19.1.0",
    "connect": "^3.7.0",
    "cors": "^2.8.5",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-change-detection-strategy": "^0.1.5",
    "eslint-plugin-cypress": "4.1.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jest": "28.11.0",
    "eslint-plugin-prettier": "5.2.3",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-sonarjs": "3.0.2",
    "eslint-plugin-unused-imports": "4.1.4",
    "jest": "^29.7.0",
    "jest-fixed-jsdom": "0.0.9",
    "jest-junit": "16.0.0",
    "jest-preset-angular": "^14.5.1",
    "lint-staged": "^15.4.3",
    "material-icons": "^1.13.14",
    "npm-run-all": "^4.1.5",
    "playwright-ng-schematics": "^2.0.3",
    "prettier": "^3.5.1",
    "prettier-package-json": "^2.8.0",
    "pretty": "^2.0.0",
    "simple-git-hooks": "2.11.1",
    "sonar-scanner": "^3.1.0",
    "stylelint": "^16.14.1",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "ts-jest": "29.2.5",
    "tslib": "^2.8.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "5.7.3",
    "typescript-eslint": "^8.24.1"
  },
  "lint-staged": {
    "*.{json,css,scss,less,md,html}": [
      "prettier --write"
    ],
    "*.component.html": [
      "prettier --write --parser html"
    ],
    "*.{css,scss}": [
      "stylelint --fix"
    ],
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/lint-staged"
  }
}
